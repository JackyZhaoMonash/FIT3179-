{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/JackyZhaoMonash/FIT3179-/refs/heads/main/cleaned_Crash_Data.csv"
    },
    "facet": {
        "field":"Dayweek",
        "type": "nominal"
    },
    "columns": 3,
    "spec": {
        "transform": [
            {
                "aggregate": [
                    {
                        "op": "count",
                        "as": "num_of_accidents"
                    }
                ],
                "groupby": [
                    "['Age.Group']"
                ]
            }
        ],
        "mark": "arc",
        "encoding": {
            "theta": {
                "field": "num_of_accidents",
                "type": "quantitative"
            },
            "color": {
                "field": "['Age.Group']",
                "type": "nominal"
            },
            "tooltip": [
                {
                    "field": "num_of_accidents",
                    "type": "quantitative"
                },
                {
                    "field": "['Age.Group']",
                    "type": "nominal"
                }
            ]
        }
    }
}